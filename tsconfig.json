{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/client/*"
      ],
      "@/components/*": [
        "src/client/components/*"
      ],
      "@/pages/*": [
        "src/client/pages/*"
      ],
      "@/hooks/*": [
        "src/client/hooks/*"
      ],
      "@/services/*": [
        "src/client/services/*"
      ],
      "@/types/*": [
        "src/client/shared/types/*"
      ],
      "@/utils/*": [
        "src/client/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "extension/**/*",
    "**/*-old.ts",
    "**/*-backup.ts"
  ]
}