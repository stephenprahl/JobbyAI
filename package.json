{
  "name": "resume-plan-ai",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --hot src/server/index.ts",
    "dev:client": "bunx vite",
    "build": "bun run build:client",
    "build:server": "bunx tsc",
    "build:client": "bunx tsc && bunx vite build",
    "start": "bun run dist/server/index.js",
    "preview": "bunx vite preview",
    "lint": "bunx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "bunx prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "bunx prisma migrate reset --force && bun run db:seed",
    "db:studio": "bunx prisma studio",
    "docker:up": "docker compose up -d postgres",
    "docker:down": "docker compose down",
    "migrate:check": "bun run scripts/pre-migration-check.ts",
    "migrate:supabase": "bun run scripts/migrate-to-supabase.ts",
    "test:supabase": "bunx tsx scripts/test-supabase.ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.7.0",
    "@elysiajs/jwt": "^0.7.0",
    "@elysiajs/static": "^0.2.0",
    "@elysiajs/swagger": "^0.7.0",
    "@prisma/client": "^6.11.1",
    "@supabase/supabase-js": "^2.50.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "elysia": "^0.7.0",
    "framer-motion": "^10.16.4",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.4",
    "puppeteer": "^21.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-icons": "^4.12.0",
    "react-markdown": "^9.0.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "prisma": "^6.11.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}